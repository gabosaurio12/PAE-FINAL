<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uniairlines.controladores.FXMLTablaAvionesController" 
            prefWidth="700" prefHeight="500">

    <Label text="Lista de Aviones" style="-fx-font-size: 20px;" 
           layoutX="10" layoutY="10" />

    <TableView fx:id="tablaAviones" layoutX="10" layoutY="50" prefWidth="680" prefHeight="380">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100" />
            <TableColumn fx:id="colModelo" text="Modelo" prefWidth="150" />
            <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="100" />
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100" />
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
            <TableColumn fx:id="colPeso" text="Peso" prefWidth="130" />
        </columns>
    </TableView>

    <HBox spacing="10" layoutX="400" layoutY="440" prefWidth="290" prefHeight="40" style="-fx-padding: 5;">
        <Button text="Agregar" onAction="#agregarAvion" prefWidth="80"/>
        <Button text="Modificar" onAction="#modificarAvion" prefWidth="80"/>
        <Button text="Eliminar" onAction="#eliminarAvion" prefWidth="80"/>
    </HBox>

</AnchorPane>
