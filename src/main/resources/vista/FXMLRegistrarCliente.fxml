<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="360.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uniairlines.controladores.FXMLRegistrarClienteController">
    <children>
        <Label fx:id="nombreLabel" layoutX="20" layoutY="20" text="Nombre:" />
        <TextField fx:id="nombreTF" layoutX="150" layoutY="16" prefWidth="200" promptText="Nombre" />

        <Label fx:id="apellidoPLabel" layoutX="20" layoutY="60" text="Apellido Paterno:" />
        <TextField fx:id="apellidoPTF" layoutX="150" layoutY="56" prefWidth="200" promptText="Apellido Paterno" />

        <Label fx:id="apellidoMLabel" layoutX="20" layoutY="100" text="Apellido Materno:" />
        <TextField fx:id="apellidoMTF" layoutX="150" layoutY="96" prefWidth="200" promptText="Apellido Materno" />

        <Label fx:id="nacionalidadLabel" layoutX="20" layoutY="140" text="Nacionalidad:" />
        <TextField fx:id="nacionalidadTF" layoutX="150" layoutY="136" prefWidth="200" promptText="Nacionalidad" />

        <Label fx:id="fechaNacimientoLabel" layoutX="20" layoutY="180" text="Fecha de nacimiento:" />
        <TextField fx:id="fechaNacimientoTF" layoutX="150" layoutY="176" prefWidth="200" promptText="dd/mm/aaaa" />

        <Button fx:id="botonGuardar" layoutX="150.0" layoutY="240.0" onAction="#guardarCliente"
                prefWidth="100" style="-fx-background-color: #4CAF50;" text="Guardar" textFill="WHITE">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
