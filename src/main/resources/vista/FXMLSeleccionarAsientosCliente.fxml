<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uniairlines.controladores.FXMLSeleccionarAsientosClienteController"
      spacing="10" alignment="CENTER" prefWidth="450" prefHeight="500" style="-fx-padding: 15;">

    <!-- Campo para mostrar el nombre del cliente -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Cliente:"/>
        <TextField fx:id="txtNombreCliente" editable="false" prefWidth="300"/>
    </HBox>

    <!-- Grid para mostrar los asientos -->
    <GridPane fx:id="gridAsientos" gridLinesVisible="true" />

    <!-- Etiqueta para mostrar el total -->
    <Label fx:id="lblTotal" text="Total: $0.00" />

    <!-- Botón para confirmar selección -->
    <Button fx:id="btnConfirmar" text="Confirmar Venta" prefWidth="200"/>

</VBox>
