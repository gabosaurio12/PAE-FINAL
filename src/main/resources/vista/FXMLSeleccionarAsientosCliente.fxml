<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uniairlines.controladores.FXMLSeleccionarAsientosClienteController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="250" style="-fx-padding: 20;">

    <!-- Nombre del cliente -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Cliente:"/>
        <Label fx:id="lblNombreCliente" style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Selección de cantidad de boletos -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Cantidad de boletos:"/>
        <Spinner fx:id="spCantidadBoletos" prefWidth="80"/>
    </HBox>

    <!-- Botón para confirmar venta -->
    <Button fx:id="btnConfirmar" text="Confirmar Venta" prefWidth="200" onAction="#confirmarVenta"/>


</VBox>
