<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="uniairlines.controladores.FXMLFormularioAvionController">
    <children>
        <Label layoutX="30" layoutY="30" text="Modelo:" />
        <TextField fx:id="tfModelo" layoutX="150" layoutY="25" prefWidth="200" />

        <Label layoutX="30" layoutY="70" text="Capacidad Total:" />
        <TextField fx:id="tfCapacidadTtotal" layoutX="150" layoutY="65" prefWidth="200" />

        <Label layoutX="30" layoutY="110" text="Filas:" />
        <TextField fx:id="tfFilas" layoutX="150" layoutY="105" prefWidth="200" />

        <Label layoutX="30" layoutY="150" text="Asientos/Fila:" />
        <TextField fx:id="tfAsientosPorFila" layoutX="150" layoutY="145" prefWidth="200" />
        
        <Label layoutX="30" layoutY="270" text="Peso (kg):" />
        <TextField fx:id="tfPeso" layoutX="150" layoutY="265" prefWidth="200" />


        <Label layoutX="30" layoutY="190" text="Tipo:" />
        <ComboBox fx:id="cbTipo" layoutX="150" layoutY="185" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Turista" />
                    <String fx:value="Ejecutivo" />
                    <String fx:value="Mixto" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label layoutX="30" layoutY="230" text="Estado:" />
        <ComboBox fx:id="cbEstado" layoutX="150" layoutY="225" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Libre" />
                    <String fx:value="En mantenimiento" />
                </FXCollections>
            </items>
        </ComboBox>

       <Button layoutX="150" layoutY="320" onAction="#btnGuardar" prefWidth="100" text="Guardar" />

    </children>
</AnchorPane>
