<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uniairlines.controladores.FXMLAsientosAvionController"
      spacing="10" alignment="CENTER" prefWidth="450" prefHeight="500" style="-fx-padding: 15;">

    <!-- Botones para seleccionar clase -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnTurista" text="Turista" />
        <Button fx:id="btnVIP" text="VIP" />
        <Button fx:id="btnEjecutivo" text="Ejecutivo" />
        <Button fx:id="btnGuardar" text="Guardar" />
    </HBox>


    <!-- Grid para mostrar los asientos -->
    <GridPane fx:id="gridAsientos" gridLinesVisible="true" />

</VBox>